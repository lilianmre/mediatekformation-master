{% extends "admin/baseback.html.twig" %}
{% block title %}Back office - Formations{% endblock %}
{% block body %}
    <div class="mb-3 mt-3">
        <a href="{{ path('admin_formations.add') }}" class="btn btn-success btn-sm">Ajouter une formation</a>
    </div>

    <table class="table table-striped">
        <caption class="visually-hidden">Back office - Liste des formations</caption>
        <thead>
            <tr>
                <th class="text-left align-top" scope="col">
                    formation<br />
                    <a href="{{ path('admin_formations.sort', {champ:'title', ordre:'ASC'}) }}" class="btn btn-info btn-sm active"><</a>
                    <a href="{{ path('admin_formations.sort', {champ:'title', ordre:'DESC'}) }}" class="btn btn-info btn-sm active">></a>
                    <form class="form-inline mt-1" method="POST" action="{{ path('admin_formations.findallcontain', {champ:'title'}) }}">
                        <div class="form-group mr-1 mb-2">
                            <input type="text" class="sm" name="recherche" 
                                   value="{% if valeur|default and not table|default %}{{ valeur }}{% endif %}">
                            <input type="hidden" name="_token" value="{{ csrf_token('filtre_title') }}">
                            <button type="submit" class="btn btn-info mb-2 btn-sm">filtrer</button>
                        </div>
                    </form>                    
                </th>
                <th class="text-left align-top" scope="col">
                    playlist<br />
                    <a href="{{ path('admin_formations.sort', {table:'playlist', champ:'name', ordre:'ASC'}) }}" class="btn btn-info btn-sm active"><</a>
                    <a href="{{ path('admin_formations.sort', {table:'playlist', champ:'name', ordre:'DESC'}) }}" class="btn btn-info btn-sm active">></a>
                    <form class="form-inline mt-1" method="POST" action="{{ path('admin_formations.findallcontain', {champ:'name', table:'playlist'}) }}">
                        <div class="form-group mr-1 mb-2">
                            <input type="text" class="sm" name="recherche" 
                                   value="{% if valeur|default and table|default and table=='playlist' %}{{ valeur }}{% endif %}">
                            <input type="hidden" name="_token" value="{{ csrf_token('filtre_name') }}">
                            <button type="submit" class="btn btn-info mb-2 btn-sm">filtrer</button>
                        </div>
                    </form>                    
                </th>
                <th class="text-left align-top" scope="col">
                    cat√©gories
                    <form class="form-inline mt-1" method="POST" action="{{ path('admin_formations.findallcontain', {champ:'id', table:'categories'}) }}">
                        <input type="hidden" name="_token" value="{{ csrf_token('filtre_id') }}">
                        <select class="form-select form-select-sm" name="recherche" id="recherche" onchange="this.form.submit()">
                            <option value=""></option>
                            {% for categorie in categories %}
                                <option 
                                    {% if valeur|default and valeur==categorie.id %} 
                                        selected
                                    {% endif %} 
                                    value="{{ categorie.id }}">{{ categorie.name }}
                                </option>
                            {% endfor %}
                        </select>                    
                    </form>            
                </th>
                <th class="text-center align-top" scope="col">
                    date<br />
                    <a href="{{ path('admin_formations.sort', {champ:'publishedAt', ordre:'ASC'}) }}" class="btn btn-info btn-sm active"><</a>
                    <a href="{{ path('admin_formations.sort', {champ:'publishedAt', ordre:'DESC'}) }}" class="btn btn-info btn-sm active">></a>                    
                </th>
                <th class="text-center align-top" scope="col">
                    &nbsp;
                </th>
            </tr>
        </thead>
        <tbody>
            {% for formation in formations %}
                <tr class="align-middle">
                    <td>
                        <h5 class="text-info">
                            {{ formation.title }}
                        </h5>
                    </td>
                    <td class="text-left">
                        {{ formation.playlist ? formation.playlist.name : '' }}                  
                    </td>                    
                    <td class="text-left">
                        {% for categorie in formation.categories %}
                            {{ categorie.name }}<br />
                        {% endfor %}
                    </td>                    
                    <td class="text-center">
                        {{ formation.publishedatstring }}
                    </td>
                    <td class="text-center">
                        {% if formation.miniature %}
                            <a href="{{ path('formations.showone', {id:formation.id}) }}">
                                <img src="{{ formation.miniature }}" alt="miniature de la formation">
                            </a>
                        {% endif %}
                        <form method="POST" onsubmit="return confirm('Confirmer la suppression ?')" action="{{ path('admin_formations.delete', {id: formation.id}) }}" class="mt-2">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete_formation_' ~ formation.id) }}">
                            <button type="submit" class="btn btn-danger btn-sm">Supprimer</button>
                        </form>
                        <a href="{{ path('admin_formations.edit', {id: formation.id}) }}" class="btn btn-primary btn-sm mt-2">Modifier</a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}