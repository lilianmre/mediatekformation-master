{% extends 'admin/baseback.html.twig' %}

{% block title %}Back office - {{ isEdit ? 'Modifier une formation' : 'Ajouter une formation' }}{% endblock %}

{% block body %}
    <h2 class="mt-3 mb-3">{{ isEdit ? 'Modifier une formation' : 'Ajouter une formation' }}</h2>

    {{ form_start(formationForm) }}
        <div class="mb-3">
            {{ form_row(formationForm.title) }}
        </div>

        <div class="mb-3">
            {{ form_row(formationForm.videoId) }}
        </div>

        <div class="mb-3">
            {{ form_row(formationForm.publishedAt) }}
        </div>

        <div class="mb-3">
            {{ form_row(formationForm.playlist) }}
        </div>

        <div class="mb-3">
            {{ form_row(formationForm.categories) }}
        </div>

        <div class="mb-3">
            {{ form_row(formationForm.description) }}
        </div>

        <button type="submit" class="btn btn-primary">Enregistrer</button>
        <a href="{{ path('admin_formations') }}" class="btn btn-secondary">Retour</a>
    {{ form_end(formationForm) }}
{% endblock %}
